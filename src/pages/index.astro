---
import Layout from '../layouts/Layout.astro';
import errorsData from '../data/errors.json';

// Limit to first 100 items for performance
const errors = errorsData.slice(0, 100);
---

<Layout title="RepairHelper - Find Appliance Error Code Fixes Fast" meta="Search thousands of appliance error codes and find replacement parts instantly. Get expert fixes for Whirlpool, Samsung, LG, Bosch, and more.">
	<!-- Hero Section -->
	<div class="text-center py-12 sm:py-16">
		<h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold text-gray-900 tracking-tight mb-4">
			Find Replacement Parts & Fixes <span class="text-blue-600">Fast</span>
		</h1>
		<p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
			Search thousands of appliance error codes. Get instant solutions and find the right replacement parts.
		</p>
		
		<!-- Search Bar -->
		<div class="max-w-2xl mx-auto mb-12">
			<div class="relative">
				<div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
					<svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
					</svg>
				</div>
				<input 
					id="searchInput"
					type="text" 
					placeholder="Search error codes (e.g., F01, 4E, Samsung)..." 
					class="block w-full pl-12 pr-4 py-4 text-lg border-2 border-gray-300 rounded-xl leading-5 bg-white placeholder-gray-400 focus:outline-none focus:placeholder-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out shadow-sm"
				/>
			</div>
			<p class="mt-3 text-sm text-gray-500">
				ðŸ’¡ Try searching by code, brand, or description
			</p>
		</div>
	</div>

	<!-- Stats Section -->
	<div class="bg-blue-50 rounded-2xl p-8 mb-12">
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
			<div>
				<div class="text-4xl font-bold text-blue-600 mb-2">{errors.length}+</div>
				<div class="text-gray-600">Error Codes</div>
			</div>
			<div>
				<div class="text-4xl font-bold text-blue-600 mb-2">{new Set(errors.map(e => e.brand)).size}</div>
				<div class="text-gray-600">Major Brands</div>
			</div>
			<div>
				<div class="text-4xl font-bold text-blue-600 mb-2">24/7</div>
				<div class="text-gray-600">Instant Access</div>
			</div>
		</div>
	</div>

	<!-- Error Codes Grid -->
	<div class="mb-16">
		<h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Browse All Error Codes</h2>
		<div id="errorGrid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
			{errors.map((error) => (
				<a 
					href={`/${error.slug.toLowerCase()}`}
					class="error-card group bg-white p-6 rounded-xl border-2 border-gray-200 hover:border-blue-500 hover:shadow-lg transition duration-200 ease-in-out"
					data-code={error.code.toLowerCase()}
					data-brand={error.brand.toLowerCase()}
					data-title={error.title.toLowerCase()}
				>
					<div class="flex items-start justify-between mb-3">
						<div>
							<div class="text-sm font-medium text-gray-500 mb-1">{error.brand}</div>
							<h3 class="text-2xl font-bold text-gray-900 group-hover:text-blue-600">{error.code}</h3>
						</div>
						<svg class="h-5 w-5 text-gray-400 group-hover:text-blue-600 transform group-hover:translate-x-1 transition-transform flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
						</svg>
					</div>
					<p class="text-gray-600 text-sm line-clamp-2">{error.title}</p>
				</a>
			))}
		</div>
		<div id="noResults" class="hidden text-center py-12">
			<p class="text-xl text-gray-600">No error codes found matching your search.</p>
			<p class="text-sm text-gray-500 mt-2">Try a different search term.</p>
		</div>
	</div>

	<!-- CTA Section -->
	<div class="bg-gradient-to-r from-blue-600 to-blue-700 rounded-2xl p-8 sm:p-12 text-center text-white">
		<h2 class="text-3xl font-bold mb-4">Can't Find Your Error Code?</h2>
		<p class="text-lg text-blue-100 mb-6 max-w-2xl mx-auto">
			We're constantly adding new error codes and brands. Check back soon or contact us for help.
		</p>
		<a href="#" class="inline-flex items-center px-6 py-3 border-2 border-white text-base font-medium rounded-lg text-white hover:bg-white hover:text-blue-600 transition duration-150 ease-in-out">
			Request an Error Code
			<svg class="ml-2 -mr-1 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
			</svg>
		</a>
	</div>
</Layout>

<script>
	// Search functionality
	const searchInput = document.getElementById('searchInput') as HTMLInputElement;
	const errorCards = document.querySelectorAll('.error-card');
	const noResults = document.getElementById('noResults');
	const errorGrid = document.getElementById('errorGrid');

	searchInput?.addEventListener('input', (e) => {
		const searchTerm = (e.target as HTMLInputElement).value.toLowerCase().trim();
		let visibleCount = 0;

		errorCards.forEach((card) => {
			const code = card.getAttribute('data-code') || '';
			const brand = card.getAttribute('data-brand') || '';
			const title = card.getAttribute('data-title') || '';

			// Check if search term matches code, brand, or title
			const matches = code.includes(searchTerm) || 
			                brand.includes(searchTerm) || 
			                title.includes(searchTerm);

			if (matches || searchTerm === '') {
				card.classList.remove('hidden');
				visibleCount++;
			} else {
				card.classList.add('hidden');
			}
		});

		// Show/hide "no results" message
		if (visibleCount === 0 && searchTerm !== '') {
			noResults?.classList.remove('hidden');
			errorGrid?.classList.add('hidden');
		} else {
			noResults?.classList.add('hidden');
			errorGrid?.classList.remove('hidden');
		}
	});
</script>

<style>
	.line-clamp-2 {
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
</style>
