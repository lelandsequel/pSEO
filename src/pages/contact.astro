---
import Layout from '../layouts/Layout.astro';
import { config } from '../config';

// Extract domain from site title for email
const domain = config.title.toLowerCase().replace(/\s+/g, '') + '.com';
---

<Layout title={`Contact ${config.title}`} meta={`Get in touch with the ${config.title} support team.`}>
  <div class="max-w-4xl mx-auto px-6 py-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-6">Contact Us</h1>
    
    <div class="prose prose-lg max-w-none">
      <p class="text-gray-700 leading-relaxed mb-6">
        We're here to help! If you have questions, feedback, or need assistance, 
        please don't hesitate to reach out to our support team.
      </p>

      <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 my-8">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Support Email</h2>
        <p class="text-gray-700">
          <a href={`mailto:support@${domain}`} class="text-blue-600 hover:text-blue-800 font-medium">
            support@{domain}
          </a>
        </p>
      </div>

      <h2 class="text-2xl font-semibold text-gray-800 mt-8 mb-4">What to Include</h2>
      <p class="text-gray-700 leading-relaxed mb-4">
        When contacting us, please include:
      </p>
      <ul class="list-disc pl-6 text-gray-700 space-y-2">
        <li>A clear description of your question or issue</li>
        <li>Any relevant error codes or product names</li>
        <li>Screenshots if applicable</li>
        <li>Your preferred method of contact</li>
      </ul>

      <h2 class="text-2xl font-semibold text-gray-800 mt-8 mb-4">Response Time</h2>
      <p class="text-gray-700 leading-relaxed">
        We aim to respond to all inquiries within 24-48 hours during business days. 
        Thank you for your patience and for using {config.title}.
      </p>
    </div>
  </div>
</Layout>
