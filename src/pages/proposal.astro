---
// src/pages/proposal.astro
// This is a standalone pitch deck page.
// We do NOT use the main Layout to avoid the "Search Bar" appearing.
// This ensures a distraction-free, high-end presentation mode.

import ProposalDeck from '../components/ProposalDeck.astro';

const title = "Scaling Infinity Digital";
const description = "Executive Brief: Programmatic SEO Architecture";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <!-- Tailwind is auto-injected by Astro, but if not, we assume it works -->
  </head>
  <body class="bg-slate-950 text-slate-300 font-sans antialiased selection:bg-blue-500 selection:text-white">
    <ProposalDeck />
  </body>
</html>
