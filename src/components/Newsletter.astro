---
const siteId = import.meta.env.SITE_ID || 'errors';

let headline = "Stop Overpaying for Repairs";
let subheadline = "Get our DIY diagnostic checklist.";
let buttonText = "Send me the Guide";

if (siteId === 'saas') {
  headline = "Download the 2025 AI Toolkit (Free)";
  subheadline = "Get the top 50 tools list.";
} else if (siteId === 'layoffs') {
  headline = "Get the Glovebox Guide";
  subheadline = "Top 20 Engine Codes & Fixes PDF.";
} else if (siteId === 'llc') {
    headline = "Start Your LLC Correctly";
    subheadline = "Get the 50-State Filing Checklist.";
}
---

<section class="bg-slate-900 py-12 px-4 sm:px-6 lg:px-8 mt-12 mb-0">
  <div class="max-w-3xl mx-auto text-center">
    <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
      {headline}
    </h2>
    <p class="mt-4 text-lg text-slate-300">
      {subheadline}
    </p>
    <form action="#" class="mt-8 sm:flex justify-center">
      <label for="email-address" class="sr-only">Email address</label>
      <input 
        id="email-address" 
        name="email" 
        type="email" 
        autocomplete="email" 
        required 
        class="w-full px-5 py-3 placeholder-gray-500 focus:ring-2 focus:ring-offset-2 focus:ring-offset-slate-900 focus:ring-white focus:border-white sm:max-w-xs rounded-md" 
        placeholder="Enter your email"
      >
      <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3 sm:flex-shrink-0">
        <button 
          type="submit" 
          class="w-full flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-slate-900 bg-white hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-slate-900 focus:ring-white"
        >
          {buttonText}
        </button>
      </div>
    </form>
    <p class="mt-3 text-sm text-slate-400">
      We care about the protection of your data. Read our <a href="/privacy" class="text-white font-medium underline">Privacy Policy</a>.
    </p>
  </div>
</section>
