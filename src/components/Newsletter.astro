---
const siteId = import.meta.env.SITE_ID || 'errors';
---

{/* DEBUG: Red border to verify component is rendering */}
<div class="newsletter-container bg-white border-t border-gray-200 py-12 px-4 sm:px-6 lg:px-8 border-2 border-red-500">
    <div class="max-w-4xl mx-auto">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-2">Subscribe to Our Newsletter</h2>
            <p class="text-gray-600">Get the latest updates delivered to your inbox</p>
        </div>
        
        <div class="newsletter-embed" style="min-height: 200px;">
            <script async src="https://subscribe-forms.beehiiv.com/embed.js"></script>
            <iframe 
                src="https://subscribe-forms.beehiiv.com/6c1dc7e2-df44-4e25-a9d4-54efc85e1ff1" 
                class="beehiiv-embed" 
                data-test-id="beehiiv-embed" 
                frameborder="0" 
                scrolling="no" 
                style="width: 100%; height: 100%; margin: 0; border-radius: 0px 0px 0px 0px !important; background-color: transparent; box-shadow: 0 0 #0000; max-width: 100%; min-height: 200px;"
            ></iframe>
        </div>
    </div>
</div>
